<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nghinv.textnote.Sqlite.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn đăng nhập hệ thống"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="66dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="55dp"
        android:id="@+id/editEEEEEEEE"
        android:hint="Email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEEEEEEEE"
        android:layout_marginTop="15dp"
        android:id="@+id/editPPPPPPPP"
        android:hint="Password"
        android:inputType="textPassword"/>




    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginbuton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/LoginEmail"
        android:text="Đăng Nhập"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/loginbuton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:text="Đăng Ký"
        android:layout_alignBaseline="@+id/LoginEmail"
        android:layout_alignBottom="@+id/LoginEmail"
        android:layout_toRightOf="@+id/LoginEmail"
        android:layout_toEndOf="@+id/LoginEmail"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

</RelativeLayout>
